<?xml version="1.0" encoding="utf-8"?>
<config>
  <fieldset name="component"
		label="ENCRYPT_OPTIONS"
		description="ENCRYPT_OPTIONS_DESC">
	<field
			id="autogenerate"
			name="autogenerate"
			type="radio"
			class="btn-group"
			label="ENCRYPT_AUTO_GENERATE_RSA_KEYS_92"
			description="ENCRYPT_AUTO_GENERATE_RSA_KEYS_DESC"
			default="1">
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>	
	<field
			id="frequency"
			name="frequency"
			type="text"
			class="inputbox"
			label="ENCRYPT_GENERATION_FREQUENCY_93"
			description="ENCRYPT_GENERATION_FREQUENCY_DESC"
			default="180">
		</field>
	<field
			id="key_length"
			name="key_length"
			type="text"
			class="inputbox"
			label="ENCRYPT_KEY_LENGTH_51"
			description="ENCRYPT_KEY_LENGTH_DESC"
			default="1024">
		</field>	
  </fieldset>
  <fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" filter="rules" component="com_encrypt_configuration" section="component">
		<action name="core.admin" title="JACTION_ADMIN" description="JACTION_ADMIN_COMPONENT_DESC" />
		<action name="core.manage" title="JACTION_MANAGE" description="JACTION_MANAGE_COMPONENT_DESC" />
		</field>
	</fieldset>
</config>
